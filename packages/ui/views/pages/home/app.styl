:root
    font-size: 12px;

#app
    min-height: 100vh;

#app .pushable-app
    $sidebar-w = 15em;
    > .sidebar:first-child
        width: $sidebar-w;

    > .pusher
        padding-left: 1.2em;
        padding-right: 1.2em;
        margin-left: $sidebar-w;

#app .pushable-app > .sidebar:first-child
    $bottom-h = 7rem

    position absolute
    padding-bottom $bottom-h

    > .bottom-info
        position absolute
        width 100%
        height $bottom-h
        bottom 0